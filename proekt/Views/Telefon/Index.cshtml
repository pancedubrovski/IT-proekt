@model IEnumerable<proekt.Models.Telefon>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div id="order" class="form-group">
    <label for="order-list" style="cursor:pointer">Order by</label>
    <select id="order-list" class="from-control">
        <option value="none">None</option>
        <option value="price_desc">Price(highest)</option>
        <option value="price">Price(lowest)</option>
        <option value="ime">Name(A-Z)</option>
        <option value="ime_desc">Name(Z-A)</option>
        <option value="pro">Brend</option>
    </select>
    <label>Izbor</label>
    <select id="order-list" class="from-control">
        <option value="price_desc">Izbor1</option>
        <option value="price">Izbor2</option>
    </select>
</div>

<table class="table" id="TelefonTable"   >
        <thead>
            <tr>
                <th>
                    @Html.ActionLink(@Html.DisplayNameFor(model =>model.prozvoditel).ToString(),
                 "Index",new {sortOrder = ViewBag.prozvoditelSortParm })
                </th>
                <th>
                    @Html.ActionLink(@Html.DisplayNameFor(model =>model.ImeTelefon).ToString(),
                  "Index",new {sortOrder = ViewBag.ImeTelefonSortParm })
                </th>
                <th>
                    @Html.ActionLink(@Html.DisplayNameFor(model =>model.cena).ToString(),
                  "Index",new {sortOrder = ViewBag.PriceSortParm })
                </th>

                <th>
                    @Html.ActionLink(@Html.DisplayNameFor(model =>model.ekran).ToString(),
                  "Index",new {sortOrder = ViewBag.PriceSortParm })
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.procesor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RAM)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.kamera)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.slika)
                </th>
                <th></th>

            </tr>
         </thead>            

    
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.prozvoditel.ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImeTelefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ekran)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.procesor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RAM)
                <span>GB</span>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.kamera)
                <span>MP</span>
            </td>
            <td>
                <img src="@item.slika" style="max-height:100px" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TelefonID }) |
                @Html.ActionLink("Details", "Details", new { id = item.TelefonID }) |
               <a> @Html.ActionLink("Delete","Delete",new { id= item.TelefonID },new {@class="btn btn-danger" })</a>
            </td>
        </tr>
        }
        </tbody>
   
</table>
